<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>whatsapp </title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats!</h3>
    <form method="GET" action="/chats/new">
        <button>New Chat</button>
        <br>
    </form>
    <%for(let chat of chats){%>
        <div class ="chat">
            <p>From: <i><%= chat.from %</i>></p>
            <div class="msg">
                <p>msg: <%= chat.msg %></p>
                <from method="GET" action="/chats/<%= chat._id %>/edit">
                    <button>Edit</button>
                </from>
                <from method="POST" action="/chats/<%= chat._id %>??_method= DELETE">
                    <button>Delete</button>
                </from>
            </div>
            
            <p>Received by <i><%= chat.to %></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4]%></p>
            <p><%= chat.created_at.toString().split(" ").slice(0, 4).join("-")%></p>
        </div>
        <br><br>
    <%}%>

</body>
</html>

